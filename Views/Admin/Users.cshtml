    function deleteUser(id, role) {

        if (!confirm("Are you sure?")) return;

        if (role === "Admin") {
            alert("Admin cannot be deleted");
            return;
        }

        if (role === "Teacher") {
            $.post("/Admin/DeleteTeacher", { id: id }, function (res) {
                alert(res.message);
                if (res.success) loadUsers();
            });
        }
        else if (role === "Student") {
