<script>
        function sendZipByEmail() {

        var email = $("#zipEmail").val();
        if (!email) {
            alert("Please enter email");
            return;
        }

        $("#zipStatus").removeClass("d-none");

        $.ajax({
            url: "/Admin/SendUsersZipByEmail",
            type: "POST",
            data: {
                toEmail: email,
                search: $("#zipSearch").val(),
                role: $("#zipRole").val(),
                subjectId: $("#zipSubjectId").val()
            },
            success: function (res) {
                $("#zipStatus").addClass("d-none");
                alert(res.message);
                $("#zipEmailModal").modal('hide');
            },
            error: function () {
                $("#zipStatus").addClass("d-none");
                alert("Something went wrong");
            }
        });
    }

        function sendPdfMail() {
        let email = prompt("Enter receiver email");
        if (!email) return;

        let search = $("#userSearch").val();
        let role = $("#roleFilter").val();
        let subjectId = $("#subjectFilter").val();

        $.post("/Admin/SendUsersPdfByEmail", {
            toEmail: email,
            search: search,
            role: role,
            subjectId: subjectId
        }, function (res) {
            alert(res.message);
        });
    }

