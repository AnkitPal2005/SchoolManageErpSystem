<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#zipEmailModal" style="margin-bottom:17px">
    📦 Send ZIP Report by Email
</button>
<div class="modal fade" id="zipEmailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Send ZIP Report by Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" id="zipEmail" class="form-control"
                           placeholder="example@gmail.com" />
                </div>

               

                <div class="mb-3">
                    <label>Role</label>
                    <select id="zipRole" class="form-select">
                        <option value="">All Roles</option>

                        @foreach (var r in ViewBag.Roles)
                        {
                            <option value="@r">@r</option>
                        }
                    </select>
                </div>

                <div id="zipStatus" class="text-center text-muted d-none">
                    ⏳ Sending email, please wait...
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-success" onclick="sendZipByEmail()">
                    📤 Send ZIP
                </button>
            </div>

        </div>
    </div>
</div>

