@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>School Management System</title>

    <style>
        body {
            margin: 0;
            font-family: Segoe UI, sans-serif;
            background: #f2f5ff;
        }

        /* NAVBAR */
        .nav {
            height: 70px;
            background: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 60px;
            box-shadow: 0 2px 10px rgba(0,0,0,.05);
        }

        .logo {
            font-size: 22px;
            font-weight: 700;
            color: #2b5cff;
        }

        .nav a {
            text-decoration: none;
            margin-left: 15px;
            padding: 8px 18px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
        }

        .login {
            border: 2px solid #2b5cff;
            color: #2b5cff;
        }

        .register {
            background: #2b5cff;
            color: #fff;
        }

        /* HERO */
        .hero {
            display: flex;
            height: calc(100vh - 70px);
            padding: 80px 60px;
        }

        .left {
            width: 45%;
        }

            .left h1 {
                font-size: 46px;
                line-height: 1.3;
            }

            .left p {
                color: #555;
                margin: 20px 0 30px;
                max-width: 480px;
            }

        .btn {
            text-decoration: none;
            padding: 12px 26px;
            border-radius: 6px;
            font-weight: 600;
            margin-right: 15px;
            display: inline-block;
        }

        .primary {
            background: #2b5cff;
            color: #fff;
        }

        .secondary {
            border: 2px solid #2b5cff;
            color: #2b5cff;
        }

        /* RIGHT */
        .right {
            width: 55%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        svg {
            width: 90%;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <div class="nav">
        <div class="logo">📘 SchoolManagement</div>
        <div>
            <a href="/Identity/Account/Login" class="login">Login</a>
            <a href="/Identity/Account/Register" class="register">Register</a>
        </div>
    </div>

    <!-- HERO -->
    <div class="hero">

        <!-- LEFT -->
        <div class="left">
            <h1>
                Smart School<br />
                Management System
            </h1>

            <p>
                Manage students, teachers, subjects and marks
                using a single powerful platform.
            </p>

            <a href="/Identity/Account/Login" class="btn primary">Get Started</a>
            <a href="#" class="btn secondary">Learn More</a>
        </div>

        <!-- RIGHT (REAL ILLUSTRATION VIA SVG) -->
        <div class="right">

            <svg viewBox="0 0 800 600">
                <!-- background -->
                <rect x="0" y="0" width="800" height="600" rx="30" fill="#eef1ff" />

                <!-- books -->
                <rect x="100" y="320" width="160" height="40" rx="8" fill="#ff7675" />
                <rect x="120" y="290" width="160" height="40" rx="8" fill="#74b9ff" />
                <rect x="140" y="260" width="160" height="40" rx="8" fill="#55efc4" />

                <!-- mobile -->
                <rect x="380" y="180" width="160" height="260" rx="18" fill="#ffffff" />
                <rect x="395" y="210" width="130" height="180" rx="10" fill="#dfe6ff" />

                <!-- play button -->
                <polygon points="440,290 440,330 480,310" fill="#ff9f43" />

                <!-- clock -->
                <circle cx="600" cy="170" r="35" fill="#fff" />
                <line x1="600" y1="170" x2="600" y2="150" stroke="#2b5cff" stroke-width="3" />
                <line x1="600" y1="170" x2="620" y2="170" stroke="#2b5cff" stroke-width="3" />

                <!-- student -->
                <circle cx="250" cy="190" r="25" fill="#fdcb6e" />
                <rect x="225" y="220" width="50" height="70" rx="10" fill="#6c5ce7" />

            </svg>

        </div>

    </div>

</body>
</html>
