@model List<UserListViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Filtered Users Report</title>

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 40px;
            color: #333;
        }

        .page {
            position: relative;
        }

        /* Left gold bar */
        .left-bar {
            position: absolute;
            left: -30px;
            top: 0;
            width: 10px;
            height: 100%;
            background-color: #c9a227;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .school-info h3 {
            margin: 5px 0;
            font-size: 16px;
        }

        .school-info p {
            margin: 2px 0;
            font-size: 12px;
        }

        .meta {
            text-align: right;
            font-size: 12px;
        }

        .gold-line {
            height: 2px;
            background-color: #c9a227;
            margin: 20px 0;
        }

        .title {
            text-align: center;
            font-size: 20px;
            margin: 25px 0;
            font-weight: bold;
        }

        .section-title {
            background-color: #c9a227;
            color: #fff;
            padding: 8px 10px;
            font-size: 14px;
            margin-top: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 13px;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .footer {
            margin-top: 25px;
            font-size: 11px;
            text-align: right;
            color: #555;
        }
    </style>
</head>

<body>
    <div class="page">
        <div class="left-bar"></div>

        <!-- HEADER -->
        <div class="header">
            <div class="school-info">
                <img src="@($"{Context.Request.Scheme}://{Context.Request.Host}/images/school-logo.png.jpg")"
                     height="300" />
                <h3>NECHO SANSKRITI SENIOR SECONDARY SCHOOL</h3>
                <p>Phase 8-A, Sector 75, Mohali</p>
                <p>+91-7717474088 | info@nechonetworks.com</p>
            </div>

            <div class="meta">
                <p><b>Date:</b> @DateTime.Now.ToString("dd-MM-yyyy")</p>
                <p><b>Report:</b> Filtered Users</p>
            </div>
        </div>

        <div class="gold-line"></div>

        <div class="title">
            FILTERED USERS REPORT
        </div>

        <!-- USERS TABLE -->
        <div class="section-title">USERS INFORMATION</div>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Subject / Roll No</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.PhoneNumber</td>
                        <td>@u.UserType</td>
                        <td>
                            @(u.UserType == "Teacher" ? u.SubjectName : u.RollNumber)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="footer">
            Generated on @DateTime.Now
        </div>
    </div>
</body>
</html>
